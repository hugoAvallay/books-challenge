<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head', { title : 'Autores' }) %>

<body>
  <div class="container">
    <%- include('partials/header.ejs') %>

    <div class="container">
      <div class="list-group">
        <div class="list-group">
          <% {authors.map((author) => { %>
            <a href="/authors/<%= author.id %>/books" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
              <img src="https://simg.nicepng.com/png/small/202-2022264_usuario-annimo-usuario-annimo-user-icon-png-transparent.png" alt="twbs" width="32" height="32" class="rounded-circle flex-shrink-0">
              <div class="d-flex gap-2 w-100 justify-content-between">
                <div>
                  <h6 class="mb-0"><%= author.name %></h6>
                  <p class="mb-0 opacity-75">
                    <%= author.country %>
                  </p>
                </div>
              </div>
            </a>
          <% })} %>
        </div>
      </div>
    </div>
  </div>


  <%- include('partials/footer.ejs') %>
  </div>
</body>
</html>